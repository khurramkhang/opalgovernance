{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./api",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
} 